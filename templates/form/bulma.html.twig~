{% block form_row %}
    {% set is_checkbox = 'checkbox' in form.vars.block_prefixes %}
    <div class="field">
        {{ form_label(form, null, { 'label_attr': {'class': is_checkbox ? 'checkbox' : 'label'} }) }}
        <div class="control">
            {% if is_checkbox %}
                {{ form_widget(form) }}
            {% else %}
                {{ form_widget(form, { 'attr': {'class': 'input'} }) }}
            {% endif %}
        </div>
        {{ form_errors(form) }}
    </div>
{% endblock %}
 