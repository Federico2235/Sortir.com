{% extends 'layouts/layout.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/profil.css') }}">
{% endblock %}

{% block title %}{{ parent() }} | Profil{% endblock %}

{% block content %}
    <section class="section">
        <div class="container">
            <div class="columns is-centered">
                <div class="column is-6">
                    <div class="card">
                        <!-- Entête de la card -->
                        <header class="card-header">
                            <p class="card-header-title">
                                Bonjour, {{ app.user.prenom }} !
                            </p>
                        </header>

                        <!-- Contenu de la card -->
                        <div class="card-content">
                            <div class="content">
                                <h2 class="title is-5">Informations de votre profil</h2>

                                <!-- Liste de définitions : chaque champ et sa valeur sur la même ligne -->
                                <dl>
                                    <div class="is-flex is-align-items-center mb-3">
                                        <dt class="has-text-weight-semibold mr-2">Nom :</dt>
                                        <dd>{{ app.user.nom }}</dd>
                                    </div>

                                    <div class="is-flex is-align-items-center mb-3">
                                        <dt class="has-text-weight-semibold mr-2">Prénom :</dt>
                                        <dd>{{ app.user.prenom }}</dd>
                                    </div>

                                    <div class="is-flex is-align-items-center mb-3">
                                        <dt class="has-text-weight-semibold mr-2">Téléphone :</dt>
                                        <dd>{{ app.user.telephone }}</dd>
                                    </div>

                                    <div class="is-flex is-align-items-center mb-3">
                                        <dt class="has-text-weight-semibold mr-2">Email :</dt>
                                        <dd>{{ app.user.mail }}</dd>
                                    </div>

                                    <div class="is-flex is-align-items-center">
                                        <dt class="has-text-weight-semibold mr-2">Pseudo :</dt>
                                        <dd>{{ app.user.pseudo }}</dd>
                                    </div>
                                </dl>
                            </div>
                        </div>

                        <!-- Pied de la card -->
                        <footer class="card-footer">
                            <a href="{{ path('app_profil_edit') }}"
                               class="card-footer-item hover-primary">
                                Modifier mon profil
                            </a>
                        </footer>


                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
