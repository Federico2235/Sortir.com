{% extends 'layouts/layout.html.twig' %}
{% block title %}{{ parent() }} | Modifier profil{% endblock %}

{% block content %}
    <section class="section">
        <div class="container">
            <div class="columns is-centered">
                <div class="column is-6">
                    <div class="card">
                        <!-- En-tête de la card -->
                        <header class="card-header">
                            <p class="card-header-title">
                                Modifier ton profil
                            </p>
                        </header>

                        <!-- Début du formulaire -->
                        {{ form_start(form, { 'attr': { 'class': 'row g-3' } }) }}

                        <!-- Contenu de la card -->
                        <div class="card-content">
                            <div class="content">
                                <!-- Champs du formulaire -->
                                <div>
                                    {{ form_row(form.pseudo, { 'attr': { 'class': 'form-control' } }) }}
                                </div>
                                <div>
                                    {{ form_row(form.nom, { 'attr': { 'class': 'form-control' } }) }}
                                </div>
                                <div>
                                    {{ form_row(form.prenom, { 'attr': { 'class': 'form-control' } }) }}
                                </div>
                                <div>
                                    {{ form_row(form.telephone, { 'attr': { 'class': 'form-control' } }) }}
                                </div>
                                <div>
                                    {{ form_row(form.mail, { 'attr': { 'class': 'form-control' } }) }}
                                </div>
                                <div>
                                    {{ form_row(form.password.first, {
                                        'label': 'Nouveau mot de passe',
                                        'attr': {'class': 'form-control'}
                                    }) }}
                                </div>
                                <div>
                                    {{ form_row(form.password.second, {
                                        'label': 'Confirmez le mot de passe',
                                        'attr': {'class': 'form-control'}
                                    }) }}
                                </div>

                                <!-- Champ photo stylisé avec Bulma -->
                                <div class="field">
                                    <label class="label">{{ form_label(form.photo) }}</label>
                                    <div class="control">
                                        <div class="file has-name is-boxed is-fullwidth">
                                            <label class="file-label">
                                                {{ form_widget(form.photo, { 'attr': { 'class': 'file-input' } }) }}
                                                <span class="file-cta">
                        <span class="file-icon">
                          <i class="fas fa-upload"></i>
                        </span>
                        <span class="file-label">
                          Choisir un fichier…
                        </span>
                      </span>
                                                <span class="file-name" id="selectedFileName">
                        Aucun fichier choisi
                      </span>
                                            </label>
                                        </div>
                                    </div>
                                    {{ form_errors(form.photo) }}
                                </div>
                            </div>
                        </div>

                        <!-- Pied de la card -->
                        <footer class="card-footer">
                            <!-- Lien qui soumet le formulaire -->
                            <a
                                    href="#"
                                    class="card-footer-item hover-primary"
                                    onclick="event.preventDefault(); this.closest('form').submit();"
                            >
                                Modifier mon profil
                            </a>
                        </footer>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Script pour afficher le nom du fichier sélectionné -->
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const fileInput = document.querySelector('.file-input');
            const fileNameSpan = document.getElementById('selectedFileName');

            if(fileInput) {
                fileInput.addEventListener('change', () => {
                    if (fileInput.files.length > 0) {
                        fileNameSpan.textContent = fileInput.files[0].name;
                    } else {
                        fileNameSpan.textContent = 'Aucun fichier choisi';
                    }
                });
            }
        });
    </script>
{% endblock %}
