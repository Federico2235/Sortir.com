{% extends 'layouts/layout.html.twig' %}

{% block title %}Modifie ton profil{% endblock %}

{% block content %}

    <div class="container mt-4">
        <h1 class="mb-4">Modifier ton profil</h1>

        <form method="post" class="needs-validation" novalidate  enctype="multipart/form-data">
            {{ form_start(form) }}

            <div class="col-md-6">
                {{ form_row(form.pseudo, { 'attr': { 'class': 'form-control' } }) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.nom, { 'attr': { 'class': 'form-control' } }) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.prenom, { 'attr': { 'class': 'form-control' } }) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.telephone, { 'attr': { 'class': 'form-control' } }) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.mail, { 'attr': { 'class': 'form-control' } }) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.password.first, {
                    'label': 'Nouveau mot de passe',
                    'attr': {'class': 'form-control'}
                }) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.password.second, {
                    'label': 'Confirmez le mot de passe',
                    'attr': {'class': 'form-control'}
                }) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.photo, {
                    'label': 'Ajouter une photo de profil',
                    'attr': {'class': 'form-control'}
                }) }}
            </div>


            <div class="col-12">
                <button type="submit" class="btn btn-primary mt-3">Modifier</button>
            </div>

            {{ form_end(form) }}
        </form>
    </div>



{% endblock %}
