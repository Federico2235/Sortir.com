{% extends 'layouts/layout.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/profil.css') }}">
{% endblock %}

{% block title %}Profil de {{ participant.pseudo }} | {{ parent() }}{% endblock %}

{% block content %}
    <section class="section">
        <div class="container">
            <div class="columns is-centered">
                <div class="column is-6">
                    <div class="card">
                        <!-- En-tête de la carte -->
                        <header class="card-header">
                            <p class="card-header-title">
                                Profil de : {{ participant.pseudo }}
                            </p>
                        </header>

                        <!-- Contenu de la carte -->
                        <div class="card-content">
                            <div class="content">
                                <div class="columns is-vcentered">
                                    <!-- Colonne de gauche : Photo -->
                                    <div class="column is-one-third has-text-centered">
                                        {% if participant.photo %}
                                            <figure class="image is-128x128" style="margin: 0 auto;">
                                                <img src="{{ asset('img/photos/' ~ participant.photo) }}"
                                                     alt="Photo de profil"
                                                     style="object-fit: cover; border: 2px solid #ccc; border-radius: 5px;">
                                            </figure>
                                        {% else %}
                                            <figure class="image is-128x128" style="margin: 0 auto;">
                                                <img src="{{ asset('img/placeholder.png') }}"
                                                     alt="Aucune photo de profil"
                                                     style="object-fit: cover; border: 2px solid #ccc; border-radius: 5px;">
                                            </figure>
                                        {% endif %}
                                    </div>

                                    <!-- Colonne de droite : Informations du participant -->
                                    <div class="column">
                                        <h2 class="title is-5">Informations du participant</h2>
                                        <dl>
                                            <div class="is-flex is-align-items-center mb-3">
                                                <dt class="has-text-weight-semibold mr-2">Nom :</dt>
                                                <dd>{{ participant.nom }}</dd>
                                            </div>
                                            <div class="is-flex is-align-items-center mb-3">
                                                <dt class="has-text-weight-semibold mr-2">Prénom :</dt>
                                                <dd>{{ participant.prenom }}</dd>
                                            </div>
                                            <div class="is-flex is-align-items-center mb-3">
                                                <dt class="has-text-weight-semibold mr-2">Téléphone :</dt>
                                                <dd>{{ participant.telephone }}</dd>
                                            </div>
                                            <div class="is-flex is-align-items-center mb-3">
                                                <dt class="has-text-weight-semibold mr-2">Email :</dt>
                                                <dd>{{ participant.mail }}</dd>
                                            </div>
                                            <div class="is-flex is-align-items-center">
                                                <dt class="has-text-weight-semibold mr-2">Pseudo :</dt>
                                                <dd>{{ participant.pseudo }}</dd>
                                            </div>
                                        </dl>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Pied de la carte (optionnel) -->
                        <footer class="card-footer">
                            {#                   {% if is_granted('ROLE_ADMIN') %}#}
                            {#                    <form action="{{ path('app_desactiver', {'id': 'participant'}) }}" method="POST">#}
                            {#                      <button type="submit" class="card-footer-item delete-button">Rendre inactif</button>#}
                            {#                    <a href="#" class="card-footer-item delete-button">Rendre inactif</a>#}
                            {#                    </form>#}
                            {#                   {% endif %}#}
                        </footer>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
