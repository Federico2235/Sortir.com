{% extends 'layouts/layout.html.twig' %}
{% block title %}Créer une ville !{% endblock %}


{% block content %}
<div class="container">
    <div class="columns is-variable is-5 is-align-items-flex-start">
        <div class="column">
            <h1 class="title">Créer une ville</h1>
        </div>
    </div>
    <div class="columns is-variable is-5 is-align-items-flex-start">
        <div class="column">
            {{ form_start(villeForm) }}
            {{ form_widget(villeForm) }}


            <button type="submit" class="button is-success">Ajouter la ville</button>
            {{ form_end(villeForm) }}
        </div>
    </div>
</div>
{% endblock %}